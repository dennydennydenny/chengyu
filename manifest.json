{
  "manifest_version": 2,

  "name": "Chengyu",
  "description": "Displays a new Chengyu every day",
  "version": "0.0.1",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "64": "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "chrome_url_overrides": {
      "newtab": "index.html"
  },

  "permissions": [
    "tabs"
  ]
}